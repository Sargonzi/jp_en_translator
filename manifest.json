{
    "manifest_version": 2,
    "name": "Japanese English Translator",
    "description": "Japanese to English, English to Japanese Translator using google translation api.",
    "version": "0.1",
    "browser_action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        },
        "default_title": "Ctrl + Shift + T to open/close the translator."
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+L",
                "mac": "MacCtrl+Shift+L"
            },
            "description": "Open jp-en translate"
        }
    },
    "permissions": ["storage",
        "clipboardRead",
        "contextMenus"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    }

}